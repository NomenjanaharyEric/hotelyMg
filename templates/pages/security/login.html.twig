{% extends 'base.html.twig' %}

{% block title %}HotelMg - Connexion{% endblock %}

{% block body %}


<div class="container mt-3">

    {% if error %}
        <div class="alert alert-danger">
            {{error.messageKey | trans(error.messageData, "security")}}
        </div>
    {% endif %}
    <div class="d-flex justify-content-center">
        <div class="card" style="width: 400px">
            <div class="card-header">
                <h3 class="card-title text-center">Formulaire de Connexion</h3>
            </div>
            <div class="card-body">
                <form action="{{ path('app_security_login') }}" method="post">
                    <div class="form-group">
                        <label for="username" class="form-label mt-4">Adresse Email</label>
                        <input type="email" class="form-control" id="username" name="_username" placeholder="jhondoe@gmail.com">
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label mt-4">Mot de Passe</label>
                        <input type="password" class="form-control" id="password" name="_password" placeholder="*****">
                    </div>

                    <button type="submit" class="btn btn-sm btn-primary">Se Connecter</button>
                </form>
            </div>
        </div>
    </div>
    
    

</div>
{% endblock %}
