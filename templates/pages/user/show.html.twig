{% extends "base.html.twig" %}

{% block title %}HotelMg - mon profil{% endblock %}

{% block body %}
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title text-center">Mes Informations</h3>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <strong>Nom</strong>
                            <span> {{ user.fullname }} </span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <strong>Pseudo</strong>
                            <span> {{ user.pseudo }} </span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <strong>Email</strong>
                            <span> {{ user.email }} </span>
                        </div>
                        <a href="{{ path('app_update_user', {'id': user.id}) }}" class=" mt-3 btn btn-sm btn-primary">modifier</a>
                        <a href="{{ path('app_user_change_password', {'id': user.id}) }}" class=" mt-3 btn btn-sm btn-danger">changer mot de passe</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}